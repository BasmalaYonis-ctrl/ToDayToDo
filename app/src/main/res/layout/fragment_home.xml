<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/navy"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welome To your ToDayToDo... "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="40dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:id="@+id/welcome_to_app"
       />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/white_blue"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_to_app"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/card"

        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="''Good things happen when you get your priorities straight.''

Scott Caan"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textSize="20dp"/>


    </androidx.cardview.widget.CardView>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:text="Our idea is to mix between setting priorties and the reward feeling of finishing your list. This is your everyday, everymode and everyplan To Do app. No matter what happen do not give up on your Top 3 priorties."
        android:padding="40dp"
        android:textSize="20dp"
        android:lineSpacingExtra="7dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="ToDayToDo"
        android:textColor="@color/white_blue"
        android:textSize="30sp"
        android:layout_margin="35dp"
        android:textStyle="italic"/>



</androidx.constraintlayout.widget.ConstraintLayout>